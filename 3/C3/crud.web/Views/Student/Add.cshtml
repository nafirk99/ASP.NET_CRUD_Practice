@model crud.web.Models.AddViewModel

@{
    ViewData["Title"] = "Add Student";
}

<h1>Add Student</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" type="text"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" asp-for="Email" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Subscribed" id="subscribed" />
        <label class="form-label" for="subscribed">subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>